.container.is-fluid
  .columns
    .column.is-9
      - if @posts.nil? or @posts.empty?
        h1.is-size-2.has-text-centered No articles found!
        .columns
          .column.is-6.container.is-centered
            img src='/octopus.svg' style='width: 5in; height: auto;'
      - else
          - @posts.each do |p|
            - cache p do
              == render partial: 'posts/post_listing', locals: { post: p }
    .column.is-3
      == render 'tags/numbered_tags'
